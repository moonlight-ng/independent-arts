<style lang="scss">
  @import "../styles/_mixins.scss";

  footer {
    position: sticky;
    top: 100%;
  }

  .l-section {
    padding: calc(var(--spacer-base) * 0.75) 0;

    .l-container>*+* {
      margin-top: calc(var(--spacer-base) * 0.75);
    }
  }

  .main,
  .footnote {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
  }

  .left {
    flex: 1 1 auto;
    width: 100%;
    max-width: 480px;

    @include screen('small') {
      max-width: none;
    }

    >*+* {
      margin-top: 18px;
    }

    a {
      display: inline-block;
      margin-bottom: 16px;
    }

    img {
      max-height: 50px;
      object-fit: contain;
    }
  }

  .footnote {
    font-size: 1.6rem;
    font-family: var(--font-sans);
    color: var(--color-dark-gray);

    a {
      font-style: normal;
      text-decoration: none;
      width: 1.6rem;
      height: 1.6rem;
      border-radius: 50%;
      border: 4px solid transparent;
      transition: border-color 0.1s ease-in-out;
    }

    a:hover {
      border-color: #0025F6;
    }
  }

  .right {
    display: inline-flex;
    flex-direction: row;
    justify-content: flex-end;
    text-align: right;
    gap: 12rem;

    @include screen('small') {
      text-align: left;
    }

    a {
      font-style: normal;
    }

    .group h6 {
      font-family: var(--font-sans-mono);
      margin-block-end: 2.4rem;
      font-weight: 400;
      font-size: 1.6rem;
      color: var(--color-dark-gray);
      text-transform: uppercase;
    }

    .footer-links {
      >*+* {
        margin-top: .8rem;
        line-height: 1.4;
      }
    }
  }
</style>

---
const { frontmatter } = Astro.props;
import {Image} from "astro:assets";

let {url, external} = frontmatter;
if (!external) {
  url = `/news/${url}`
}
---
<a class="news" href={url} target={external ? "_blank": "_self"}>
  <div class="imgContainer" aria-hidden="true">
    <Image src={frontmatter.imageUrl} alt="{frontmatter.title}" />
  </div>
  <div class="newsExcerptDetails">
    <p>{frontmatter.date} - {frontmatter.author}</p>
    <h3>{frontmatter.title}</h3>
  </div>
</a>

<style>
  .news {
    width: 100%;
    max-width: 400px;
    display: block;
    text-decoration: none;
    padding: 2em 0;
    margin: 0 auto;
  }
  .news > div {
    width: 90%;
    margin: 0 auto;
    max-width: 400px;
  }
  .news:hover, .news:focus {
    background-color: #f2f2f2;
    text-decoration: none;
  }
  .news > .imgContainer {
    width: 310px;
    height: 210px;
    margin-bottom: 2em;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .imgContainer > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .newsExcerptDetails {
    text-align: center;
  }
  .newsExcerptDetails h3 {
    font-size: 2.4rem;
    font-weight: 700;
    font-style: normal;
    margin-bottom: 1em;
  }
  .newsExcerptDetails p {
    font-family: var(--font-sans-mono);
    font-size: 1.4rem;
    font-style: normal;
    text-transform: uppercase;
  }
</style>
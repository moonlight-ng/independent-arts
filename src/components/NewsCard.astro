---
import { type NewsPost } from '@@/schemas/news';
import { Image } from 'astro:assets';

interface Props {
  data: NewsPost;
}

const { data } = Astro.props;
const { title, slug, attribution, author, publishedAt, coverImage } = data;

const formattedDate = new Date(publishedAt)
  .toLocaleDateString('en-US', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric',
  })
  .split('/')
  .join('.');

const link = attribution ? attribution.url : `/news/${slug}`;
const target = attribution ? '_blank' : '_self';
const nameToDisplay = attribution ? attribution.author : author.name;
const external = attribution ? true : false;
---

<a class='news' href={link} target={target}>
  <div class='imgContainer' aria-hidden='true'>
    <Image src={coverImage} alt={title} width={350} height={200} />
  </div>
  <div class='newsExcerptDetails'>
    <p>{formattedDate} - {nameToDisplay}</p>
    <h3>
      {title}
      {
        external ? (
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='15'
            height='15'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='1.5'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <>
              <path d='M7 7h10v10' />
              <path d='M7 17 17 7' />
            </>
          </svg>
        ) : (
          ''
        )
      }
    </h3>
  </div>
</a>

<style>
  .news {
    width: 100%;
    max-width: 400px;
    display: block;
    text-decoration: none;
    padding: 2em 0;
    margin: 0 auto;
  }
  .news > div {
    width: 90%;
    margin: 0 auto;
    max-width: 400px;
  }
  .news:hover,
  .news:focus {
    background-color: #f2f2f2;
    text-decoration: none;
  }
  .news > .imgContainer {
    margin-bottom: 2em;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .imgContainer > img {
    width: 100%;
    height: 210px;
    object-fit: cover;
    aspect-ratio: 16 / 9;
  }
  .newsExcerptDetails {
    text-align: center;
  }
  .newsExcerptDetails h3 {
    font-size: 2.4rem;
    font-weight: 700;
    font-style: normal;
    margin-bottom: 1em;
  }
  .newsExcerptDetails h3 > span {
    display: inline-block;
    transform: translateY(2px);
  }
  .newsExcerptDetails h3 > span img {
    width: 15px;
  }
  .newsExcerptDetails p {
    font-family: var(--font-sans-mono);
    font-size: 1.4rem;
    font-style: normal;
    text-transform: uppercase;
  }
</style>

---
//Components
import Layout from "@layout/Default.astro";
import PageHeader from "@components/PageHeader.astro";
import { Image } from "astro:assets";

import EDHImage from "../assets/images/projects/edeyhappen.webp";
import feelGoodImage from "../assets/images/projects/feelgood.jpg";
import coverBankImage from "../assets/images/projects/coverbank.jpg";
import ludoImage from "../assets/images/projects/ludo.jpg";

---

<Layout>
    <main>
        <PageHeader>
            <h1>A platform for creators</h1>
        </PageHeader>
        <section class="l-container">
			<h4 class="c-section-title">Featured</h4>
            <ul class="c-section l-grid">
                <li class="l-grid__column--3">
                    <a href="https://www.youtube.com/watch?v=krScuOAEG6U" target="_blank" class="button">
                        <Image src={EDHImage} alt="Cover image for EDH" /> E Dey Happen
                    </a>
                </li>
                <li class="l-grid__column--3">
                    <a href="https://afeelgoodbook.com" target="_blank" class="button">
                        <Image src={feelGoodImage} alt="Cover image for Feel Good" /> Feel Good
                    </a>
                </li>
                <li class="l-grid__column--3">
                    <a href="https://albumcoverbank.com" target="_blank" class="button">
                        <Image src={coverBankImage} alt="Cover image for Cover Bank" /> Cover Bank
                    </a>
                </li>
                <li class="l-grid__column--3">
                    <a href="https://ludobyyadi.com" target="_blank" class="button">
                        <Image src={ludoImage} alt="Cover image for Ludo" /> Ludo by Yadi
                    </a>
                </li>
            </ul>
        </section>
    </main>
</Layout>

<style lang="scss">
    @import "../styles/mixins.scss";

    main {
        animation: fadeIn linear 0.3s;
    }

    @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    h4.c-section-title {
        margin-bottom: 20px;
    }

    li {
        margin-bottom: 20px;
    }
</style>
